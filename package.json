  },
  "scripts": {
    "build": "node src/generator.js && npm run format",
    "format": "prettier --write \"**/*.{js,json}\"",
    "lint": "eslint \"src/**/*.js\"",
    "lint:fix": "eslint \"src/**/*.js\" --fix",
    "postbuild": "echo 'Build complete! Themes are in themes/ directory'",
    "prebuild": "echo 'Building Harmonia themes...'",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.json": [
      "prettier --write"
    ]
  },
