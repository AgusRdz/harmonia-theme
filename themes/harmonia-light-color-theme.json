{
  "$schema": "vscode://schemas/color-theme",
  "name": "Harmonia Light",
  "type": "light",
  "colors": {
    "editor.background": "#eceef1",
    "editor.foreground": "#2d2d2d",
    "editorCursor.foreground": "#3a3a3a",
    "editor.selectionBackground": "#d4dbe8",
    "editor.inactiveSelectionBackground": "#e3e8f0AA",
    "editorIndentGuide.background1": "#e5e5e5",
    "editorIndentGuide.activeBackground1": "#c1c1c1",
    "editor.lineHighlightBackground": "#e6eaf0",
    "editorWhitespace.foreground": "#c3c7ce",
    "editorBracketMatch.background": "#cfe8fc",
    "editorBracketMatch.border": "#8bb6e2",
    "editorLineNumber.foreground": "#7a7f89",
    "editorGutter.background": "#eceef1",
    "editorGutter.addedBackground": "#86c591",
    "editorGutter.deletedBackground": "#e78e8e",
    "editorGutter.modifiedBackground": "#83bde7",
    "sideBar.background": "#eceef1",
    "sideBar.foreground": "#3a3a3a",
    "sideBar.border": "#d0d3d6",
    "activityBar.background": "#e6e8eb",
    "activityBar.foreground": "#3a3a3a",
    "activityBarBadge.background": "#c574dd",
    "activityBarBadge.foreground": "#ffffff",
    "tab.activeBackground": "#e6e8eb",
    "tab.inactiveBackground": "#e2e4e7",
    "tab.activeForeground": "#3a3a3a",
    "tab.inactiveForeground": "#7d8590",
    "tab.border": "#d0d3d6",
    "statusBar.background": "#d0d3d6",
    "statusBar.foreground": "#3a3a3a",
    "statusBar.debuggingBackground": "#c574dd",
    "statusBar.debuggingForeground": "#ffffff",
    "statusBar.noFolderBackground": "#d5d8db",
    "statusBar.noFolderForeground": "#3a3a3a",
    "terminal.background": "#eceef1",
    "terminal.foreground": "#2d2d2d",
    "terminal.border": "#d0d3d6",
    "terminal.ansiBlack": "#777777",
    "terminal.ansiRed": "#ec7279",
    "terminal.ansiGreen": "#76b685",
    "terminal.ansiYellow": "#e0a96d",
    "terminal.ansiBlue": "#6ebddb",
    "terminal.ansiMagenta": "#c574dd",
    "terminal.ansiCyan": "#4ab5b4",
    "terminal.ansiWhite": "#3a3a3a",
    "terminal.ansiBrightBlack": "#999999",
    "terminal.ansiBrightRed": "#ec8a8f",
    "terminal.ansiBrightGreen": "#8acb99",
    "terminal.ansiBrightYellow": "#f0c685",
    "terminal.ansiBrightBlue": "#8bd4e9",
    "terminal.ansiBrightMagenta": "#d995ed",
    "terminal.ansiBrightCyan": "#a3dee0",
    "terminal.ansiBrightWhite": "#000000",
    "panel.background": "#eceef1",
    "panel.border": "#d0d3d6",
    "breadcrumb.foreground": "#7a7f89",
    "breadcrumb.background": "#eceef1",
    "breadcrumb.focusForeground": "#4b5ebd"
  },
  "tokenColors": [
    {
      "scope": [
        "comment",
        "punctuation.definition.comment"
      ],
      "settings": {
        "foreground": "#808890",
        "fontStyle": "italic"
      }
    },
    {
      "scope": [
        "keyword",
        "storage.type",
        "storage.modifier"
      ],
      "settings": {
        "foreground": "#994ebf"
      }
    },
    {
      "scope": [
        "meta.use",
        "support.class",
        "entity.name.namespace",
        "entity.name.type"
      ],
      "settings": {
        "foreground": "#4b5ebd"
      }
    },
    {
      "scope": [
        "string",
        "punctuation.definition.string"
      ],
      "settings": {
        "foreground": "#2f7c61"
      }
    },
    {
      "scope": [
        "constant.numeric",
        "constant.language",
        "constant.character"
      ],
      "settings": {
        "foreground": "#ae7a4b"
      }
    },
    {
      "scope": [
        "variable",
        "meta.definition.variable.name"
      ],
      "settings": {
        "foreground": "#4ab5b4"
      }
    },
    {
      "scope": [
        "support.function",
        "entity.name.function"
      ],
      "settings": {
        "foreground": "#7b5ea1"
      }
    },
    {
      "scope": [
        "variable.parameter",
        "meta.function.parameter"
      ],
      "settings": {
        "foreground": "#489dac"
      }
    },
    {
      "scope": "markup.heading",
      "settings": {
        "foreground": "#3a3a3a",
        "fontStyle": "bold"
      }
    },
    {
      "scope": "markup.bold",
      "settings": {
        "foreground": "#7b5ea1",
        "fontStyle": "bold"
      }
    },
    {
      "scope": "markup.italic",
      "settings": {
        "foreground": "#555f77",
        "fontStyle": "italic"
      }
    },
    {
      "scope": [
        "markup.quote.markdown"
      ],
      "settings": {
        "foreground": "#4ab5b4",
        "fontStyle": "italic"
      }
    },
    {
      "scope": [
        "markup.inline.raw.markdown"
      ],
      "settings": {
        "foreground": "#44894a",
        "fontStyle": "italic"
      }
    },
    {
      "scope": "meta.separator.markdown",
      "settings": {
        "foreground": "#cfd8e3"
      }
    },
    {
      "scope": [
        "invalid",
        "invalid.illegal"
      ],
      "settings": {
        "foreground": "#ec7279"
      }
    },
    {
      "scope": [
        "markup.inserted"
      ],
      "settings": {
        "foreground": "#76b685"
      }
    },
    {
      "scope": [
        "markup.deleted"
      ],
      "settings": {
        "foreground": "#ec7279"
      }
    },
    {
      "scope": [
        "markup.changed"
      ],
      "settings": {
        "foreground": "#e0a96d"
      }
    },
    {
      "name": "HTML Angle Brackets",
      "scope": [
        "punctuation.definition.tag",
        "punctuation.definition.tag.html"
      ],
      "settings": {
        "foreground": "#999999"
      }
    },
    {
      "name": "HTML Attributes",
      "scope": [
        "entity.other.attribute-name",
        "entity.other.attribute-name.html"
      ],
      "settings": {
        "foreground": "#3574a3"
      }
    },
    {
      "name": "HTML Attribute Values",
      "scope": [
        "string.quoted.double.html",
        "string.quoted.single.html"
      ],
      "settings": {
        "foreground": "#2f7c61"
      }
    },
    {
      "name": "HTML Text Content",
      "scope": [
        "text.html.basic source",
        "text.html.basic meta.embedded.block"
      ],
      "settings": {
        "foreground": "#3a3a3a"
      }
    },
    {
      "name": "Tailwind Utility Classes",
      "scope": [
        "string.quoted.double.html class",
        "string.quoted.single.html class"
      ],
      "settings": {
        "foreground": "#6a9842"
      }
    }
  ]
}